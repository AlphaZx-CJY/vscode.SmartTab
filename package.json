{
  "name": "smarttab",
  "displayName": "SmartTab",
  "description": "Smart tab out of quotes, brackets, etc.",
  "version": "1.0.2",
  "publisher": "congjiye",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlphaZx-CJY/SmartTab-vscode-extension.git"
  },
  "icon": "icons/logo.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SmartTab",
      "properties": {
        "smarttab.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable SmartTab"
        },
        "smarttab.skipSymbols": {
          "type": "array",
          "default": [
            "\"",
            "'",
            "`",
            ")",
            "]",
            "}",
            ">",
            ",",
            ".",
            ":",
            ";"
          ],
          "description": "Characters that SmartTab will skip over when pressing Tab.",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1
          }
        }
      }
    },
    "commands": [
      {
        "command": "toggle",
        "title": "Toggle SmartTab in workspace",
        "category": "SmartTab"
      }
    ],
    "keybindings": [
      {
        "key": "tab",
        "command": "tabout",
        "when": "editorTextFocus && !suggestWidgetVisible && !inSnippetMode && !inlineSuggestionVisible && !editorHasMultipleSelections"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.54.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
